@model MasVidaWebMVC.User

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<h3>Esta seguro que desea eliminar el cliente?</h3>
<p>Se eliminaran todas las transacciones realizadas y la cuenta del mismo.</p>
<fieldset>
    <legend>Usuario</legend>

    <div class="display-label">
        <strong>Nombre</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
         <strong>Apellido</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LastName)
    </div>

    <div class="display-label">
        <strong>@Html.DisplayNameFor(model => model.DNI)</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DNI)
    </div>

    <div class="display-label">
         <strong>Dirección</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Address)
    </div>

    <div class="display-label">
         <strong>@Html.DisplayNameFor(model => model.Email)</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Email)
    </div>

    <div class="display-label">
        <strong>Teléfono</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Phone)
    </div>

    <div class="display-label">
         <strong>Producto</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Product.ProductName)
    </div>

    <div class="display-label">
        <strong>Activo</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IsActive)
    </div>

    <div class="display-label">
         <strong>Tipo de Usuario</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserType.UserTypeName)
    </div>

    <div class="display-label">
         <strong>Groupo Familiar</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FamiliesGroup.FamilyName)
    </div>

    <div class="display-label">
         <strong>Fecha de Cración</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreationDateTime)
    </div>

    <div class="display-label">
        <strong>Saldo</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AccountTotal)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <br />
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        @Html.ActionLink("Volver", "Index",null,new { @class="btn btn-primary"})
    </p>
}
