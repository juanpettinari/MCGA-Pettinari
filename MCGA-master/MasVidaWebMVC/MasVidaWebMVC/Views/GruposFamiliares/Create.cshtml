@model MasVidaWebMVC.FamilyGroup

@{
    ViewBag.Title = "Grupos Familiares";
}

<h2>Crear</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Grupo Familiar</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FamilyName,"Nombre")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FamilyName)
            @Html.ValidationMessageFor(model => model.FamilyName)
        </div>
        <br />
        <p>
            <input type="submit" value="Crear" class="btn btn-success" />
            | @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
        </p>
    </fieldset>
}
