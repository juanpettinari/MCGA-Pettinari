@model MasVidaWebMVC.User

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>
<h3>¿Está seguro que quiere eliminar esto?</h3>
<fieldset>
    <legend>Usuario</legend>

    <div class="display-label">
        <strong>Nombre</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
        <strong>Apellido</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LastName)
    </div>

    <div class="display-label">
        <strong>@Html.DisplayNameFor(model => model.DNI)</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DNI)
    </div>

    <div class="display-label">
        <strong>Dirección</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Address)
    </div>

    <div class="display-label">
        <strong>@Html.DisplayNameFor(model => model.Email)</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Email)
    </div>

    <div class="display-label">
        <strong>Teléfono</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Phone)
    </div>

    <div class="display-label">
        <strong>Fecha de Nacimiento</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Birthday)
    </div>

    <div class="display-label">
        <strong>Nombre de Usuario</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserName)
    </div>

    <div class="display-label">
        <strong>Activo</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IsActive)
    </div>

    <div class="display-label">
        <strong>Tipo de Usuario</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserType.UserTypeName)
    </div>

</fieldset>
@using (Html.BeginForm())
{
    <p>
        <br />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
    </p>
}
