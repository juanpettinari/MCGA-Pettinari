@model IEnumerable<MasVidaWebMVC.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            DNI
        </th>
        <th>
            Nombre de Usuario
        </th>
        <th>
            Activo
        </th>
        <th>
            Tipo de Usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DNI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserType.UserTypeName)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.UserID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Detalles", "Details", new { id=item.UserID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Cambiar Password", "CambiarPassword", new { id = item.UserID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.UserID }, new { @class = "btn btn-danger" }) 
            
        </td>
    </tr>
}

</table>
