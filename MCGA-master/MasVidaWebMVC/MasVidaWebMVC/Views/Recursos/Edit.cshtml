@model MasVidaWebMVC.Resource

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Resource</legend>


        @Html.HiddenFor(model => model.ControllerID)


        <div class="editor-label">
            @Html.LabelFor(model => model.ControllerName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ControllerName)
            @Html.ValidationMessageFor(model => model.ControllerName)
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-success"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
