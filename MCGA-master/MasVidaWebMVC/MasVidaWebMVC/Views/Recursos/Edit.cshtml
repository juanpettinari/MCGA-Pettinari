@model MasVidaWebMVC.Resource

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Recurso</legend>


        @Html.HiddenFor(model => model.ControllerID)


        <div class="editor-label">
            @Html.LabelFor(model => model.ControllerName,"Nombre del Recurso")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ControllerName)
            @Html.ValidationMessageFor(model => model.ControllerName)
        </div>

        <br />
        <p>
            <input type="submit" value="Guardar" class="btn btn-success" />
            | @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
        </p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
