@model IEnumerable<MasVidaWebMVC.Resource>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ControllerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ControllerName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ControllerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ControllerName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ControllerID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ControllerID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ControllerID })
        </td>
    </tr>
}

</table>
