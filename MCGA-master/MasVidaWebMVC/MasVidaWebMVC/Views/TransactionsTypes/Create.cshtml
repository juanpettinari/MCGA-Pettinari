@model MasVidaWebMVC.TransactionType

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tipo de Transacción</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TransactionTypeName,"Tipo de Transacción")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TransactionTypeName)
            @Html.ValidationMessageFor(model => model.TransactionTypeName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TransactionTypeDescription,"Descripción de la Transaccion")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TransactionTypeDescription)
            @Html.ValidationMessageFor(model => model.TransactionTypeDescription)
        </div>

        <p>
            <input type="submit" value="Crear" class="btn btn-success" />
            | @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
