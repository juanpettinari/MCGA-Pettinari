@model IEnumerable<MasVidaWebMVC.Product>

@{
    ViewBag.Title = "Index";
}
<h2>Producto</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            Producto
        </th>
        <th>
            Descripción
        </th>
        <th>
            Precio
        </th>
        <th>
            Activo
        </th>
        <th>Herramientas</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductDescription)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.ProductPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ProductID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Detalles", "Details", new { id=item.ProductID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ProductID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
