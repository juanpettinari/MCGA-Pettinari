@model MasVidaWebMVC.Parameter

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Parameter</legend>

        @Html.HiddenFor(model => model.ParameterID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ParameterName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ParameterName)
            @Html.ValidationMessageFor(model => model.ParameterName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ParameterValue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ParameterValue)
            @Html.ValidationMessageFor(model => model.ParameterValue)
        </div>

        <br />
        <p>
            <input type="submit" value="Guardar" class="btn btn-success" />
            | @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
