@model MasVidaWebMVC.Parameter

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Parámetros</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ParameterName,"Nombre")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ParameterName)
            @Html.ValidationMessageFor(model => model.ParameterName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ParameterValue,"Valor")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ParameterValue)
            @Html.ValidationMessageFor(model => model.ParameterValue)
        </div>
        <br />
        <p>
            <input type="submit" value="Crear" class="btn btn-success" />
            | @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
