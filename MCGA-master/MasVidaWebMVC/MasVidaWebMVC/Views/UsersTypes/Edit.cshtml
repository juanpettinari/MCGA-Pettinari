@model MasVidaWebMVC.UserType

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tipo de Usuario</legend>

        @Html.HiddenFor(model => model.UserTypeID)

        <div class="editor-label">
            @Html.LabelFor(model => model.UserTypeName,"Tipo de Usuario")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserTypeName)
            @Html.ValidationMessageFor(model => model.UserTypeName)
        </div>

        <br />
        <p>
            <input type="submit" value="Guardar" class="btn btn-success" />
            | @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
